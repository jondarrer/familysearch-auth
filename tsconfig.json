{
  "ts-node": { "files": true },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "target": "es2022",
    "resolveJsonModule": true
  },
  "include": ["./index.ts", "./src/**/*", "./src/**/*.json"]
}
